{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "../dist/api",

    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],
    "types": ["node"],

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/scripts/**", "**/*.spec.ts"]
}