{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021"],
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,

    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@taskforge/auth": ["auth/src/index.ts"],
      "@taskforge/data": ["data/src/index.ts"]
    },
    "skipLibCheck": true
  }
}